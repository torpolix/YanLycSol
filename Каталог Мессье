import csv

# Открываем исходный файл для чтения
with open('messier.txt', 'r', encoding='utf-8') as file:
    # Читаем все строки из файла
    lines = file.readlines()

# Удаляем первую строку, так как это заголовки столбцов
header = lines.pop(0)

# Открываем файл для записи в формате CSV
with open('messier.csv', 'w', newline='', encoding='utf-8') as csvfile:
    # Создаем объект для записи CSV
    writer = csv.writer(csvfile, delimiter=';')

    # Записываем заголовки
    writer.writerow(header.strip().split('\t'))

    # Записываем оставшиеся строки
    for line in lines:
        # Разбиваем строку по табуляции и записываем данные в CSV файл
        writer.writerow(line.strip().split('\t'))
