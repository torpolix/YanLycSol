class TwoFacedJanus:
    def __init__(self, face='future'):
        self.face = face

    def __call__(self, arg):
        if self.face == 'future':
            step = 1
        elif self.face == 'past':
            step = -1

        current = arg
        cnt = 0
        while True:
            print(current, end=' ')
            if current == 0 or cnt == 9:
                break
            cnt += 1
            current += step
        print()
