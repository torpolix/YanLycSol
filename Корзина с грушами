class PearsBasket:
    def __init__(self, count):
        self.count = count

    def __floordiv__(self, divisor):
        quotient = self.count // divisor
        remainder = self.count % divisor
        baskets = [PearsBasket(quotient) for _ in range(divisor)]
        if remainder:
            baskets.append(PearsBasket(remainder))
        return baskets

    def __mod__(self, divisor):
        return self.count % divisor

    def __add__(self, other):
        total_count = self.count + other.count
        return PearsBasket(total_count)

    def __sub__(self, value):
        if self.count >= value:
            self.count -= value
        else:
            self.count = 0

    def __str__(self):
        return str(self.count)

    def __repr__(self):
        return f"PearsBasket({self.count})"
